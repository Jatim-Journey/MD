<!-- res/drawable/card_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <stroke android:width="5dp" android:color="@color/blue"/> <!-- Border color and width -->
            <corners android:radius="20dp"/> <!-- Same as cardCornerRadius -->
        </shape>
    </item>
</layer-list>
