<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.OnboardActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/titleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mountain_image" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Selamat Datang Di"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J-Team Journey"
        android:textColor="#FF7F00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="8dp" />

    <ImageView
        android:id="@+id/vektor"
        android:layout_width="62.92dp"
        android:layout_height="10.3dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitleTextView"
        app:srcCompat="@drawable/vektor" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tidak sabar untuk memulai? Ayo jelajahi keajaiban alam, budaya, dan kuliner Jawa Timur sekarang juga. Klik tombol di bawah dan mulai petualangan Anda!"
        android:textColor="#777777"
        android:textSize="14sp"
        android:gravity="center"
        android:textAlignment="center"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vektor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mulai"
        android:layout_width="315dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:text="Mulai"
        android:textSize="18dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>
